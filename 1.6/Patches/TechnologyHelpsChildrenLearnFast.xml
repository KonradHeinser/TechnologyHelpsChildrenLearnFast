        <mods>
            <li>Royalty</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/HediffDef[defName="LearningAssistant"]/stages/li/statOffsets</xpath>
            <value>
                <LearningRateFactor>0.2</LearningRateFactor>
            </value>
        </match>
    </Operation>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ideology</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/HediffDef[defName="NeuralSupercharge"]/stages/li/statOffsets</xpath>
            <value>
                <LearningRateFactor>0.25</LearningRateFactor>
            </value>
        </match>
    </Operation>
</Patch>
